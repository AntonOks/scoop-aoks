            "thingsboard"
        ]
    ],
    "checkver": {
        "github": "https://github.com/thingsboard/thingsboard"
    },
    "autoupdate": {
        "url": "https://github.com/thingsboard/thingsboard/releases/download/v$version/thingsboard-windows-$version.zip"
    }
