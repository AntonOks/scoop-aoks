    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/syncthing/relaysrv/releases/download/v1.29.1/strelaysrv-windows-amd64-v1.29.1.zip",
            "hash": "6955b1db7160ef1230770cab6451bb66773f5a7613720a8af79fd04265c2d663",
            "extract_dir": "strelaysrv-windows-amd64-v1.29.1"
        },
        "32bit": {
            "url": "https://github.com/syncthing/relaysrv/releases/download/v1.29.1/strelaysrv-windows-386-v1.29.1.zip",
            "hash": "f27d7f5fe09ea1772e4400d63e9b36077f5c910b020af0806d19b3317f649875",
            "extract_dir": "strelaysrv-windows-386-v1.29.1"
        }
    },
    "bin": [
        [
            "strelaysrv.exe",
            "strelaysrv",
            "-keys \"$dir\""
        ]
    ],
    "persist": [
        "cert.pem",
        "key.pem"
    ],
    "pre_install": [
        "foreach ($name in @('cert.pem', 'key.pem')) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$dir\" -Name $name | Out-Null",
        "    }",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/syncthing/relaysrv"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/syncthing/relaysrv/releases/download/v$version/strelaysrv-windows-amd64-v$version.zip",
                "extract_dir": "strelaysrv-windows-amd64-v$version"
            },
            "32bit": {
                "url": "https://github.com/syncthing/relaysrv/releases/download/v$version/strelaysrv-windows-386-v$version.zip",
                "extract_dir": "strelaysrv-windows-386-v$version"
            }
        }
    }
}
