{
    "version": "2.0.6",
    "description": "The Syncthing relay server",
    "homepage": "https://syncthing.net/",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/syncthing/relaysrv/releases/download/v2.0.6/strelaysrv-windows-amd64-v2.0.6.zip",
            "hash": "d91d55f2c762d611a79bbed03cb679de6faa16ad144c733cb4cbc4b8b9c534a5",
            "extract_dir": "strelaysrv-windows-amd64-v2.0.6"
        },
        "32bit": {
            "url": "https://github.com/syncthing/relaysrv/releases/download/v2.0.6/strelaysrv-windows-386-v2.0.6.zip",
            "hash": "685a77539d3653a62a0ddd4b8ee23f82732afefff14c1f1b3270de27d68e8dac",
            "extract_dir": "strelaysrv-windows-386-v2.0.6"
        }
    },
    "bin": [
        [
            "strelaysrv.exe",
            "strelaysrv",
            "-keys \"$dir\""
        ]
    ],
    "persist": [
        "cert.pem",
        "key.pem"
    ],
    "pre_install": [
        "foreach ($name in @('cert.pem', 'key.pem')) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$dir\" -Name $name | Out-Null",
        "    }",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/syncthing/relaysrv"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/syncthing/relaysrv/releases/download/v$version/strelaysrv-windows-amd64-v$version.zip",
                "extract_dir": "strelaysrv-windows-amd64-v$version"
            },
            "32bit": {
                "url": "https://github.com/syncthing/relaysrv/releases/download/v$version/strelaysrv-windows-386-v$version.zip",
                "extract_dir": "strelaysrv-windows-386-v$version"
            }
        }
    }
}
