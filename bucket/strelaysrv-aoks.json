{
    "version": "2.0.3",
    "description": "The Syncthing relay server",
    "homepage": "https://syncthing.net/",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/syncthing/relaysrv/releases/download/v2.0.3/strelaysrv-windows-amd64-v2.0.3.zip",
            "hash": "9832a08f3a20eaeb1679ed4b1e65f381a5ae0b963ecf06ad86ca09d32ebacabb",
            "extract_dir": "strelaysrv-windows-amd64-v2.0.3"
        },
        "32bit": {
            "url": "https://github.com/syncthing/relaysrv/releases/download/v2.0.3/strelaysrv-windows-386-v2.0.3.zip",
            "hash": "d10524800c37831c97b17f258e81fc6b50eb37441df9ccec4fb2ed1c8ae91d37",
            "extract_dir": "strelaysrv-windows-386-v2.0.3"
        }
    },
    "bin": [
        [
            "strelaysrv.exe",
            "strelaysrv",
            "-keys \"$dir\""
        ]
    ],
    "persist": [
        "cert.pem",
        "key.pem"
    ],
    "pre_install": [
        "foreach ($name in @('cert.pem', 'key.pem')) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$dir\" -Name $name | Out-Null",
        "    }",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/syncthing/relaysrv"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/syncthing/relaysrv/releases/download/v$version/strelaysrv-windows-amd64-v$version.zip",
                "extract_dir": "strelaysrv-windows-amd64-v$version"
            },
            "32bit": {
                "url": "https://github.com/syncthing/relaysrv/releases/download/v$version/strelaysrv-windows-386-v$version.zip",
                "extract_dir": "strelaysrv-windows-386-v$version"
            }
        }
    }
}
