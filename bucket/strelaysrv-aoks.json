{
    "version": "2.0.1",
    "description": "The Syncthing relay server",
    "homepage": "https://syncthing.net/",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/syncthing/relaysrv/releases/download/v2.0.1/strelaysrv-windows-amd64-v2.0.1.zip",
            "hash": "2484966ba910f8ade4a9dd348ba99e638d119f6d1916dc32fe9aa96cf25e8bcf",
            "extract_dir": "strelaysrv-windows-amd64-v2.0.1"
        },
        "32bit": {
            "url": "https://github.com/syncthing/relaysrv/releases/download/v2.0.1/strelaysrv-windows-386-v2.0.1.zip",
            "hash": "2ff3a7fc7cbf2c4c836da9bb05c862c265965d2b2eaea923fb664ae632342d59",
            "extract_dir": "strelaysrv-windows-386-v2.0.1"
        }
    },
    "bin": [
        [
            "strelaysrv.exe",
            "strelaysrv",
            "-keys \"$dir\""
        ]
    ],
    "persist": [
        "cert.pem",
        "key.pem"
    ],
    "pre_install": [
        "foreach ($name in @('cert.pem', 'key.pem')) {",
        "    if (!(Test-Path \"$persist_dir\\$name\")) {",
        "        New-Item -Force -Path \"$dir\" -Name $name | Out-Null",
        "    }",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/syncthing/relaysrv"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/syncthing/relaysrv/releases/download/v$version/strelaysrv-windows-amd64-v$version.zip",
                "extract_dir": "strelaysrv-windows-amd64-v$version"
            },
            "32bit": {
                "url": "https://github.com/syncthing/relaysrv/releases/download/v$version/strelaysrv-windows-386-v$version.zip",
                "extract_dir": "strelaysrv-windows-386-v$version"
            }
        }
    }
}
