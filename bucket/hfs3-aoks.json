    "description": "HFS is a free, one single executable file Http File Server software.",
    "license": "GPL-3.0",
    "version": "0.55.2",
    "url": "https://github.com/rejetto/hfs/releases/download/v0.55.2/hfs-windows-x64-0.55.2.zip",
    "hash": "a42b1e06c37441dfc08a8e73974158b4dc220e1ded433e3cfd2ec1dfdaaf9f32",
    "pre_install": "if (!(Test-Path \"$persist_dir\\config.yaml\")) { New-Item \"$dir\\config.yaml\" | Out-Null }",
    "bin": [
        [
            "hfs.exe",
            "hfs3",
            "--cwd $dir"
        ],
        [
            "hfs.exe",
            "hfs",
            "--cwd $dir"
        ]
    ],
    "shortcuts": [
        [
            "hfs.exe",
            "HFS 3",
            "--cwd $dir"
        ]
    ],
    "persist": [
        "config.yaml",
        "logs",
        "plugins"
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/rejetto/hfs/releases/download/v$version/hfs-windows-x64-$version.zip"
    }
